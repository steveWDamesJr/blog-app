

  <h2 class="post-preview-title"><%= post.title%>
    <span class="post-preview-author"> by: <%=@post.author.name%></span>
  </h2>
 <div class="post-details-counters">
    <span>Comments: <%= post.comments_counter%></span>
    <span>Likes: <%= post.likes_counter%></span>
  </div>
<% if can? :destroy, @post %>
<%= button_to 'Delete', user_post_path(@post.author, @post), method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>
